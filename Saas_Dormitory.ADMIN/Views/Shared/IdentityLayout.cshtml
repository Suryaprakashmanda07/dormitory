@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

<script>
    // Assign directly from configuration (no Context.Items)
    window.BaseURL = '@Configuration["AppSettings:BaseUrl"]';
    window.ImageURL = '@Configuration["AppSettings:ImageUrl"]';
</script>


<!DOCTYPE html>

<html>
