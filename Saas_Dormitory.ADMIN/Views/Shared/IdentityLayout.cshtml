    <script src="~/code/scripts/layoutscript.js"></script>
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <div id="overlay" class="overlay">

        <div id="spinner" class="spinner"></div>
    </div>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
</body>
</html>
